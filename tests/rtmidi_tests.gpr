with "config/rtmidi_tests_config.gpr";
project Rtmidi_Tests is

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Rtmidi_Tests_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("rtmidi_tests.adb");

   package Compiler is
      for Default_Switches ("Ada") use Rtmidi_Tests_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Linker is
      for Default_Switches ("Ada") use ("-lrtmidi");
   end Linker;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Rtmidi_Tests;
